<!DOCTYPE html>
<html>
  <head>
    <title>Mind Click</title>
    <%= favicon_link_tag 'LOGO-MINDCLICK-03.png' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://kit.fontawesome.com/4c68ce4f85.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body class = 'flex h-screen bg-gray-100 font-sans relative'>
    
    <% if user_signed_in? %>
      <!-- Side bar-->
      <div id="sidebar" class="h-screen menu bg-white w-16 text-white px-2 flex flex-col justify-center items-center static shadow-xl">
          <%= image_tag 'LOGO-MINDCLICK-03-nombre.png', class: 'mb-6 w-10/12 self-center' %>
          <%= image_tag current_user.gravatar_url, class: 'rounded-full flex items-center w-16 justify-center self-center' %><br>
          <p class="w-full hidden text-gray-600 text-center"><%= current_user.first_name %></p>
          <ul class="list-reset mt-8">              
              <li class="my-2 md:my-0">
                  <%= link_to "<i class='fas fa-home fa-fw mr-3'></i><span class='inline-block pb-1 md:pb-0 text-sm'>Inicio</span>".html_safe, root_path, class:"block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" %>
              </li>
              <li class="my-2 md:my-0">
                  <%= link_to "<i class='fas fa-user fa-fw mr-3'></i><span class='inline-block pb-1 md:pb-0 text-sm'>Perfil</span>".html_safe, user_path(current_user.id), class:"block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" %>
              </li>
              <li class="my-2 md:my-0">
                  <%= link_to "<i class='fas fa-sign-out-alt fa-fw mr-3'></i><span class='inline-block pb-1 md:pb-0 text-sm'>Salir</span>".html_safe, destroy_user_session_url, method: :delete, class:"block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" %>
              </li>
          </ul>

      </div>
    <% end %>
    
    <div class="flex flex-row flex-wrap flex-1 flex-grow content-start">
        <%= yield %>
    </div>

    <% if flash[:alert] %>
      <aside class="z-auto shadow w-7/12 lg:w-1/3 absolute inset-x-0 bottom-0 mx-auto mb-3 text-white bg-red-400 border border-red-900 rounded p-2 text-center"><%= flash[:alert] %></aside>
    <% end %>
    <% if flash[:notice] %>
      <aside class="z-auto shadow w-7/12 lg:w-1/3 absolute inset-x-0 bottom-0 mx-auto mb-3 text-white bg-green-400 border border-green-900 rounded p-2 text-center"><%= flash[:notice] %></aside>
    <% end %>      
  </body>
</html>


